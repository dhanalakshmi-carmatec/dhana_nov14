<%= form_for @user do |f| %>
<%= @user.errors.full_messages.to_sentence%>

<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>  

<p>
  <%= f.label :email %>
  <%= f.text_field :email %>
</p>  

<p>
  <%= f.label :password %>
  <%= f.text_field :password %>
</p>  

<p>
  <%= f.submit %>
</p>  

<% end %>