<hr class="border">
<%= form_for @user do |f| %>
  <%= @user.errors.full_messages.to_sentence%>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>  
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>
    
    <div class="form-group">
      <%= f.submit %>
    </div>  
<% end %>
