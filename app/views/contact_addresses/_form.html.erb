<hr class="border">
<%= form_for ([@contact, @contact_address]) do |f| %>
  <%= @contact_address.errors.full_messages.to_sentence%>
    <div class="form-group">
      <%= f.label :address_type %>
      <%= f.select :address_type, options_for_select(["Home", "Office", "other"]), prompt: 'Select One' %>
    </div>  

    <div class="form-group">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>  

    <div class="form-group">
      <%= f.submit %>
    </div>  
<% end %>
